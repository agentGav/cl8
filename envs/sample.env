
# General
# ------------------------------------------------------------------------------

# change this to `config.settings.local` in for local
DJANGO_SETTINGS_MODULE=config.settings.production
DJANGO_SECRET_KEY="this should be a long autogenerated string"

# you can set this to be a long, unguessable string for more security

DJANGO_ADMIN_URL="admin"
DJANGO_ALLOWED_HOSTS="your.server.domain"

# Security
# ------------------------------------------------------------------------------
# TIP: better off using DNS, however, redirect is OK too
DJANGO_SECURE_SSL_REDIRECT=False

# Email
# ------------------------------------------------------------------------------
# only if you are using mailgun. But it's basically free.
MAILGUN_API_KEY=""
# setting this to a domain _other_ than your main domain means that if it's
# reported as spam, it doesn't get the domain you use for work email banned
# at the same time
MAILGUN_DOMAIN="mail.domain.name"
MAILGUN_API_URL="https://api.eu.mailgun.net/v3/"

# AWS
# ------------------------------------------------------------------------------
DJANGO_AWS_ACCESS_KEY_ID=
DJANGO_AWS_SECRET_ACCESS_KEY=
DJANGO_AWS_STORAGE_BUCKET_NAME=

# django-allauth
# ------------------------------------------------------------------------------
ACCOUNT_ALLOW_REGISTRATION=False
# Gunicorn
# ------------------------------------------------------------------------------
WEB_CONCURRENCY=4

# Sentry
# ------------------------------------------------------------------------------
# only needed if you want to use sentry. but sentry is very helpful
SENTRY_DSN=


# Vue
VUE_APP_CONSTELLATION_NAME="your app name"
VUE_APP_I18N_FALLBACK_LOCALE="en"
VUE_APP_I18N_LOCALE="en"
VUE_APP_SUPPORT_EMAIL="support@domain.com"
